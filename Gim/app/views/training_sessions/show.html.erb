<h2><%= @training_session.activity %></h2>
<p><strong>Date:</strong> <%= @training_session.date %></p>
<p><strong>Duration:</strong> <%= @training_session.duration %> minutes</p>
<p><strong>Description:</strong> <%= @training_session.description %></p>

<%= link_to 'Back to all sessions', training_sessions_path, class: 'btn btn-secondary' %>
<%= link_to 'Edit', edit_training_session_path(@training_session), class: 'btn btn-warning' %>
<%= button_to 'Delete', training_session_path(@training_session), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
